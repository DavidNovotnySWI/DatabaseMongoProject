@using WebApplication1.Models
@model List<Book>

@{
    ViewData["Title"] = "Home Page";
}

<h1>@ViewData["Title"]</h1>

<div class="mb-4">
    <a asp-action="BookCreate" class="btn btn-success">Create</a>
</div>

<div class="row">
    @foreach (var book in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100" style="cursor: pointer;" onclick="window.location.href='@Url.Action("Detail", new { Id = book.Id })'">
                @if (!string.IsNullOrEmpty(book.Picture))
                {
                    <img class="card-img-top" src="@book.Picture" alt="@book.Title" style="height: 200px; object-fit: cover;">
                }
                else
                {
                    <img class="card-img-top" src="https://via.placeholder.com/150" alt="No image available" style="height: 200px; object-fit: cover;">
                }
                <div class="card-body">
                    <h5 class="card-title">@book.Title</h5>
                    <p class="card-text"><strong>Publish Date:</strong> @book.PublisheDate</p>
                </div>
            </div>
        </div>
    }
</div>
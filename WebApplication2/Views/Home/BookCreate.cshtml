@using ClientApp.Models
@using WebApplication1.Models
@model BookCreateViewModel

@{
    ViewData["Title"] = "Create Book";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-8">
        <div class="card shadow-sm">
            <div class="card-header text-center bg-primary text-white">
                <h4>Create Book</h4>
            </div>
            <div class="card-body">
                <form asp-action="BookCreate" method="post" class="needs-validation" novalidate>
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="form-group mb-3">
                        <label asp-for="Book.Title" class="form-label">Title</label>
                        <input asp-for="Book.Title" class="form-control" placeholder="Enter book title" />
                        <span asp-validation-for="Book.Title" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Book.Description" class="form-label">Description</label>
                        <textarea asp-for="Book.Description" class="form-control" placeholder="Enter book description" rows="3"></textarea>
                        <span asp-validation-for="Book.Description" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Book.PublisheDate" class="form-label">Publish Year</label>
                        <input asp-for="Book.PublisheDate" type="number" class="form-control" placeholder="Enter publish year (e.g., 2025)" />
                        <span asp-validation-for="Book.PublisheDate" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Book.Genre" class="form-label">Genre</label>
                        <input asp-for="Book.Genre" class="form-control" placeholder="Enter book genre" />
                        <span asp-validation-for="Book.Genre" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Book.Pages" class="form-label">Pages</label>
                        <input asp-for="Book.Pages" class="form-control" placeholder="Number of pages" />
                        <span asp-validation-for="Book.Pages" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Book.Price" class="form-label">Price (Kč)</label>
                        <input asp-for="Book.Price" type="number" step="0.01" class="form-control" placeholder="Enter price" />
                        <span asp-validation-for="Book.Price" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Book.Picture" class="form-label">Picture URL</label>
                        <input asp-for="Book.Picture" class="form-control" placeholder="https://example.com/book-image.jpg" />
                        <span asp-validation-for="Book.Picture" class="text-danger"></span>
                    </div>

                    @if (ViewData["AuthorId"] != null)
                    {
                        <input type="hidden" name="Book.AuthorId" value="@ViewData["AuthorId"]" />
                    }
                    else
                    {
                        <div class="form-group mb-3">
                            <label asp-for="Book.AuthorId" class="form-label">Author</label>
                            <select asp-for="Book.AuthorId" asp-items="Model.Authors" class="form-control">
                                <option value="">Select an author</option>
                            </select>
                            <span asp-validation-for="Book.AuthorId" class="text-danger"></span>
                        </div>
                    }

                    <div class="form-group mt-3">
                        <button type="submit" class="btn btn-success w-100">Save</button>
                        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary w-100 mt-2">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>